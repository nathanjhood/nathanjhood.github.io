{
  "$schema": "https://json.schemastore.org/tsconfig",
  // taken from '@tsconfig/node20@20.1.0'
  "display": "node",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    // custom
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "tsBuildInfoFile": ".cache/tsconfig.node.tsbuildinfo",
    //
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "out"
  ],
  "include": [
    "lib",
    ".config",
    "scripts",
    "**/**/env-node.d.ts",
    "**/**/*.d.ts",
    "**/**/*.mjs",
    "**/**/*.js",
    "**/**/*.ts",
    "**/**/*.json",
    ".config/env.ts",
    ".config/paths.ts",
    ".config/esbuild.config.ts",
    "scripts/build.ts"
  ]
}
